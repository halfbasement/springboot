<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.app.board.domain.comment.CommentMapper">

    <select id="findByPostId" parameterType="Long" resultType="Comment">
         <![CDATA[
        SELECT *
        FROM comment
        WHERE post_id=#{postId}
        ORDER BY  reg_date ASC
        ]]>
    </select>

    <insert id="insertMainComment" parameterType="Comment">
         <![CDATA[
        insert into comment(comment, member_email, post_id)
        values (#{comment},#{memberEmail},#{postId})
        ]]>

    </insert>
</mapper>